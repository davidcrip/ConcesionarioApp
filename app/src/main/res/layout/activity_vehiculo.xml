<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".VehiculoActivity"
    android:background="@color/black"
    >



    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:text="Vehiculos" />

    <EditText
        android:id="@+id/etplaca"
        android:layout_height="wrap_content"
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:gravity="center"
        android:textColorHint="@color/white"
        android:hint="Placa"
        android:drawableStart="@drawable/ic_baseline_call_to_action_24"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/etmarca"
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:gravity="center"
        android:hint="Marca"
        android:drawableStart="@drawable/ic_baseline_minor_crash_24"
        />

    <EditText
        android:id="@+id/etmodelo"
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:gravity="center"
        android:hint="Modelo"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:inputType="textPersonName"
        android:drawableStart="@drawable/ic_baseline_directions_car_24"
        />

    <CheckBox
        android:id="@+id/cbactivov"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:text=" Activo"

        />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btanular"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:onClick="Anular"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Activar / Desactivar"
            android:textColor="@color/white"
            android:backgroundTint="#151515"
            android:textSize="20dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="92dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:onClick="Regresar"
            app:srcCompat="@drawable/ic_baseline_keyboard_return_24"
            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="92dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:onClick="Guardar"
            app:srcCompat="@drawable/baseline_save_24" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="92dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:onClick="Consultar"
            app:srcCompat="@drawable/baseline_search_24" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="92dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:onClick="Cancelar"
            app:srcCompat="@drawable/baseline_delete_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/textView40"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Regresar"
            android:textSize="15dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/textView50"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Guardar"
            android:textSize="15dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/textView60"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Buscar"
            android:textSize="15dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/textView70"
            android:layout_width="92dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Borrar"
            android:textSize="15dp"
            android:textColor="@color/white"
            />

    </LinearLayout>



</LinearLayout>